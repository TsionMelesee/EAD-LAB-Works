<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-4.0.xsd">

    <!-- Define DBConnectionManager bean -->
    <bean id="dbConnectionManager" class="com.book.db.DBConnectionManager">
        <property name="url" value="jdbc:mysql://localhost:3306/BookstoreDB"/>
        <property name="username" value="root"/>
        <property name="password" value="root123"/>
    </bean>

    <!-- Define BookRegistrationServlet bean -->
    <bean id="bookRegistrationServletIoc" class="com.book.servlet.BookRegistrationServletIoc">
        <constructor-arg ref="dbConnectionManager"/>
    </bean>
     <aop:aspectj-autoproxy />

    <!-- Bean definitions -->
    <bean id="loggingAspect" class="com.book.aspect.LoggingAspect"/>
</beans>
